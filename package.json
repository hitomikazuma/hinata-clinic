{
  "name": "hinata-clinic",
  "version": "1.0.0",
  "description": "Hinata Clinic WordPress テーマ",
  "type": "module",
  "scripts": {
    "dev": "wp-env start && npm run plugins:sync && npm run vite:dev",
    "vite:dev": "vite --host localhost --port 5175",
    "vite:build": "vite build",
    "wp:start": "wp-env start",
    "wp:stop": "wp-env stop",
    "wp:restart": "wp-env stop && wp-env start",
    "db:refresh": "node ./tools/sql-refresh.mjs",
    "db:backup": "node ./tools/db-backup.mjs",
    "db:status": "wp-env run cli wp db check",
    "plugins:sync": "node ./tools/plugins-sync.mjs"
  },
  "dependencies": {
    "gsap": "^3.13.0",
    "swiper": "^12.0.3"
  },
  "devDependencies": {
    "@wordpress/env": "^10.17.0",
    "globals": "^16.0.0",
    "sass": "^1.70.0",
    "vite": "^6.1.0",
    "vite-plugin-live-reload": "^3.0.4"
  }
}
